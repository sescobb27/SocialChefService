<div class="container">
    <div class="row">
        <form {{action 'search' on='submit'}}
                    class="form-horizontal"
                    method="get"
                    accept-charset="utf-8"
                    id="productSearchForm"
                    role="form">

            <div class="form-group input-group">
                {{input type="search" id="products-search"
                    placeholder="Buscador de Comidas"
                    value=search_query
                    class="form-control"}}
                <span class="input-group-btn">
                    <button class="submit btn btn-primary"
                        {{action "search"}}
                        id="search-btn">Buscar</button>
                </span>
            </div>
        </form>
    </div>
</div>