<div class="row">
    <form {{action 'validate' on='submit'}}
                class="form-horizontal form-group"
                method="post"
                accept-charset="utf-8"
                id="registerForm"
                role="form">
        {{#if invalidPass}}
            <div id="error_msg" class="alert alert-danger">
                la contraseña y la confirmación de la contraseña no concuerdan
            </div>
        {{/if}}
        <div class="col-xs-6">
            {{input type="text" id="user_name"
                placeholder="Nombre"
                value=name
                class="form-control col-xs-3"}}
            {{input type="text" id="user_last_name"
                placeholder="Apellido"
                value=last_name
                class="form-control col-xs-3"}}
            {{input type="text" id="username"
                placeholder="Usuario"
                value=username
                class="form-control col-xs-3"}}
            {{input type="email" id="email"
                placeholder="Correo"
                value=email
                class="form-control col-xs-3"}}
            {{input type="password" id="user_password"
                placeholder="Contraseña"
                value=password
                class="form-control col-xs-3"}}
            {{input type="password" id="confirm_password"
                placeholder="Confirmacion Contraseña"
                value=confirm_password
                class="form-control col-xs-3"}}
            <button class="submit btn btn-primary"
                {{action "validate"}}
                {{bind-attr disabled="isProcessing"}}>Aceptar</button>
        </div>
    </form>
</div>